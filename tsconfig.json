{
  "compilerOptions": {
    /* Language & Environment */
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "CommonJS",
    "moduleResolution": "node",

    /* Paths */
    "rootDir": "./src",
    "outDir": "./dist",

    /* Type Safety */
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,

    /* Interop & Imports */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,

    /* Build Quality */
    "skipLibCheck": true,
    "sourceMap": true,

    /* Runtime */
    "types": ["node", "express"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.spec.ts"]
}
